<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
</head>
<body>
  <%- include('../partials/navbar'); %>
    <div class="container-fluid">
        <h1><%= title %></h1>
        <div class="col-sm-8 ">
          <% if(message) { %>
            <div class="alert <%= type %>" role="alert">
              <%= message %>
            </div>
          <%}%>
            <a class="btn btn-primary" href="/tipoProfissional/add" role="button">Inserir novo tipo de profissional</a>

            <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Situação</th>
                    <th scope="col">Opções</th>
                  </tr>
                </thead>
                <tbody class="table-profissional">
                    <% if(data.length > 0){ %>
                       <% for ( var i = 0 ; i < data.length ; i++){ %>
                       <tr>
                        <td>
                            <%= data[i].id%>
                         </td>
                          <td>
                             <%= data[i].descricao%>
                          </td>
                          <td>
                            
                            <% if(data[i].situacao == true){ %>
                                <p class="text-success">Ativo</p>
                            <% }else{ %>
                                <p class="text-danger">Desativado</p>
                            <%} %>
                             
                          </td>
                         <td>
                            <a class="btn btn-primary" href="/tipoProfissional/<%= data[i].id%>" role="button">Visualizar</a>
                            <a class="btn btn-warning" href="/tipoProfissional/edit/<%= data[i].id%>" role="button">Editar</a>
                            <a class="btn btn-danger" href="/tipoProfissional/delete/<%= data[i].id%>" role="button">Excluir</a>
                        </td>
                       </tr>
                       <% } %>
                    <% } %>
                  </tbody>
        
              </table>
        </div>
    </div>
</body>
</html>
<script src="/javascripts/bootstrap.bundle.min.js"></script>